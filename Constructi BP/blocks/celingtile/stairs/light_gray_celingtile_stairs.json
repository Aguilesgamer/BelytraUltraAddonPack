{
  "format_version": "1.16.100",
  "minecraft:block": {
    "description": {
      "identifier": "const:light_gray_celingtile_stairs",
      "properties": {
        "const:rotation": [
          0,
          1,
          2,
          3,
          4,
          5,
          6
        ]
      }
    },
    "components": {
      "minecraft:loot": "loot_tables/const/blocks/basalt_cobblestone_stairs.json",
      "minecraft:block_light_absorption": 0,
      "minecraft:destroy_time": 0.15,
      "minecraft:explosion_resistance": 4.2,
      "minecraft:geometry": "geometry.stair_block",
      "minecraft:on_player_placing": {
        "event": "const:rotational"
      },
      "minecraft:entity_collision": {
        "origin": [-8,0,-8],
        "size": [16,8,16]
      },
      "minecraft:material_instances": {
        "*": {
          "texture": "const:light_gray_celingtile",
          "render_method": "alpha_test"
        }
      }
    },
    "permutations": [
      {
        "condition": "query.block_property('const:rotation') == 0",
        "components": {
          "minecraft:rotation": [
            0,0,0
          ]
        }
      },
      {
        "condition": "query.block_property('const:rotation') == 1",
        "components": {
          "minecraft:rotation": [
            0,0,0
          ]
        }
      },
      {
        "condition": "query.block_property('const:rotation') == 2",
        "components": {
          "minecraft:rotation": [
            0,90,0
          ]
        }
      },
      {
        "condition": "query.block_property('const:rotation') == 3",
        "components": {
          "minecraft:rotation": [
            0,-90,0
          ]
        }
      },
      {
        "condition": "query.block_property('const:rotation') == 4",
        "components": {
          "minecraft:rotation": [
            0,180,0
          ]
        }
      },
      {
        "condition": "query.block_property('const:rotation') == 5",
        "components": {
          "minecraft:rotation": [
            0,0,0
          ]
        }
      }
    ],
    "events": {
      "const:rotational": {
        "set_block_property": {
          "const:rotation": "(query.cardinal_player_facing)"
        }
      }
    }
  }
}